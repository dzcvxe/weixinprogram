<!--pages/myinfo/myinfo.wxml-->
<!-- <text>pages/myinfo/myinfo.wxml</text> -->
<view class='content'>
  <view class='nav'>
    <view class='top'>
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class='nickname'>
      <open-data type="userNickName"></open-data> 
    </view>
  </view>
    <view class='item'>
      <text class='left'>学号：</text><text class='right'>{{myinfo.sno}}</text>
    </view>
    <view class='item'>
      <text class='left'>姓名：</text><text class='right'>{{myinfo.sname}}</text>
    </view>
    <view class='item'>
      <text class='left'>性别：</text><text class='right'>{{myinfo.ssex}}</text>
    </view>
    <view class='item'>
     <text class='left'> 班级：</text><text class='right'>{{myinfo.sclass}}</text>
    </view>
    <view class='item'>
      <text class='left'>系部：</text><text class='right'>{{myinfo.sdept}}</text>
    </view>
    <view class='item' bindtap='setemail'>
     <text class='left'> 邮箱：</text><text class='right' wx:if="{{myinfo.email==''|| myinfo.email==null}}">未绑定</text><text class='right' wx:else>{{myinfo.email}}</text>
    </view>
    <view class='item' bindtap='resetpwd'>
     <text class='left'> 密码：</text><text class='right'>重置</text>
    </view>
    <view class='item' bindtap='exit'>
      <text class='left'>退出：</text><text class='right'>>>></text>
    </view>
  
</view>